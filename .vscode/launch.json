{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current File",
      "program": "${file}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with Input",
      "program": "${file}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": true,
      "args": ["<", "${fileDirname}/input.txt"]
    }
  ]
}
